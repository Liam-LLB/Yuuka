  <script>
    function showSection(type) {
      document.getElementById('choiceScreen').style.display = 'none';
      if (type === 'redflag') {
        document.body.classList.add('red-mode');
        document.body.classList.remove('green-mode');
        document.getElementById('redflagSection').style.display = 'block';
        document.getElementById('luckSection').style.display = 'none';
        document.getElementById('topNav').style.backgroundColor = '#000000';
      } else if (type === 'luck') {
        document.body.classList.add('green-mode');
        document.body.classList.remove('red-mode');
        document.getElementById('luckSection').style.display = 'block';
        document.getElementById('redflagSection').style.display = 'none';
        document.getElementById('topNav').style.backgroundColor = '#1d3b30';
      }
    }

    function goBack() {
      document.body.classList.remove('red-mode', 'green-mode');
      document.getElementById('choiceScreen').style.display = 'block';
      document.getElementById('redflagSection').style.display = 'none';
      document.getElementById('luckSection').style.display = 'none';
      document.getElementById('topNav').style.backgroundColor = '#1e293b';
    }
  </script>
